{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}
    <div class="row">

            <div class="col">
                <div class="card">
                    <img src="{{ actorById.imgActor }}" class=img-fluid" alt="Image du produit" width="250px" height="200px">
                    <div class="card-body">
                        <h4 class="card-title">{{ actorById.firstname }} - {{ actorById.lastname }}</h4>
                        <span class="badge badge-info">{{ actorById.dateBirthday | date ('d-m-Y')}}</span>
                        <a href="{{ path('app_actor_index') }}" class="btn btn-primary btn-sm">Retour</a>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}